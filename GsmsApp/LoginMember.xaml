<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GsmsApp.LoginMember">
    <ContentPage.Content>
        <ScrollView>
        <StackLayout VerticalOptions="StartAndExpand" BackgroundColor="AliceBlue">
           <Image Source="gsms.png" Margin="0,0,0,10"></Image> 
            <Label Text="Username" FontAttributes="Bold"/>
            <Entry x:Name="usernameEntry" />
            <Label Text="Password" FontAttributes="Bold"/>
            <Entry x:Name="passwordEntry" IsPassword="true" />
            <Button Text="Login" Clicked="loginBtnClick" />
            <Button Text="Register" Clicked="registerBtnClick" />
            <Label x:Name="messageLabel" />
        </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>